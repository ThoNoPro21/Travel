{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
        "@shared/*": [
            "./src/shared/*"
        ],
        "@pages/*": [
            "./src/app/*"
        ],
        "@components/*": [
            "./src/components/*"
        ],
        "@redux/*": [
            "./src/redux/*"
        ],
        "@/src/*": [
            "./src/*"
        ]
    }
},
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "public"]
}
