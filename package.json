{
    "name": "training-yellow-restaurant",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev -p 3355",
        "build": "npm run lint:es && next build",
        "start": "next start",
        "next-lint": "next lint",
        "lint:es": "eslint . --ext ts,tsx,js,jsx --fix",
        "lint:style": "stylelint ./src/**/*.css ./src/**/*.scss --fix",
        "lint": "npm run lint:es && npm run lint:style",
        "pre-check-commit": "npm run lint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "npm run lint:es"
        ]
    },
    "dependencies": {
        "next": "14.1.0",
        "prettier": "^3.2.5",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.0.1",
        "eslint": "^8",
        "eslint-config-next": "14.1.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "postcss": "^8",
        "sass": "^1.71.1",
        "stylelint": "^16.2.1",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-standard-scss": "^13.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "tailwindcss": "^3.3.0",
        "typescript": "^5"
    }
}
